<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!-- Content for the Edit Page-->
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            
            <h1><%= title %></h1>
            
            <form class="form" method="post">
            
              <div class="form-group">
                <label for ="dayTextField">Day of Run</label>
                <input 
                type="text" class="form-control"
                id="dayTextField"
                placeholder="Monday"
                name=Day 
                value="<%= run.Day %>"
                required>
              </div>

            <div class="form-group">
                <label for ="nameTextField">Name of Runner</label>
                <input 
                type="text" class="form-control"
                id="nameTextField"
                placeholder="John"
                name=Name 
                value="<%= run.Name %>"
                required>
              </div>

            <div class="form-group">
                <label for ="distTextField">Distance Ran (km)</label>
                <input 
                type="text" class="form-control"
                id="distTextField"
                placeholder="15"
                name=Distance
                value="<%= run.Distance %>"
                required>
              </div>

            <div class="form-group">
                <label for ="timeTextField">Duration of Run (seconds)</label>
                <input 
                type="text" class="form-control"
                id="timeTextField"
                placeholder="300"
                name=Time 
                value="<%= run.Time %>"
                required>
              </div>

            <div class="form-group">
                <label for ="speedTextField">Speed of Run (km/h)</label>
                <input 
                type="text" class="form-control"
                id="speedTextField"
                placeholder="5"
                name=Speed 
                value="<%= run.Speed %>"
                required>
              </div>
            <br>
              <button class="btn-btn-primary" type="submit">
                <i class="fa-solid fa-check"></i>
                Submit Edited Entry
              </button>

              <a href="/runs" class="btn btn warning">
                <i class="fa-solid fa-rotate-left"></i>
                Cancel</a>

            </form>
        </div>
    </div>
</div>

<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>